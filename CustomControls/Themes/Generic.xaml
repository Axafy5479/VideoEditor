    <Style TargetType="{x:Type custom:FontSerchingCombo}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type custom:FontSerchingCombo}">
                    <ComboBox Width="{TemplateBinding Width}" 
                              Height="{TemplateBinding Height}" HorizontalAlignment="Left" ItemsSource="{Binding}" VerticalAlignment="Top" VerticalContentAlignment="Center" x:Name="FontsCombo" Style="{StaticResource ComboBoxA}" SelectedIndex="0">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LocalFontName}" FontFamily="{Binding FontFamily}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type custom:FontSerchingCombo}}}" Background="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type custom:FontSerchingCombo}}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                    </ComboBox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type custom:Parameter_FontFamily}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type custom:Parameter_FontFamily}">

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}" Foreground="White" HorizontalAlignment="Left"/>
                        <custom:FontSerchingCombo Margin="30,0,0,0" Grid.Column="1" Width="200" Height="30"/>
                    </Grid>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type custom:ParameterSection}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type custom:ParameterSection}">

                    <Grid Margin="0,30,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding SectionTitle, RelativeSource={RelativeSource TemplatedParent}}" FontSize="16"/>
                            <Grid Grid.Column="1" Background="Gray" HorizontalAlignment="Stretch" Height="1" Margin="10,0,10,0"></Grid>
                        </Grid>

                        <StackPanel Margin="50,10,0,0" Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding Parameters, RelativeSource={RelativeSource AncestorType={x:Type custom:ParameterSection}}}">
                            </ItemsControl>
                        </StackPanel>
                    </Grid>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style   TargetType="{x:Type custom:ColorPalette}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type custom:ColorPalette}">
                    <Grid Width="400" Height="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>


                        <Grid Grid.Column="0" Grid.Row="0">

                            <tri:ColorPicker Grid.Row="0" x:Name="ColorPicker" />

                        </Grid>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Width="100" Height="20" HorizontalAlignment="Center">
                            <Grid Background="{Binding OldColor.Value, RelativeSource={RelativeSource TemplatedParent}}" Width="50" Height="20"/>
                            <Grid Background="{Binding CurrentColor.Value, RelativeSource={RelativeSource TemplatedParent}}" Width="50" Height="20"/>
                        </StackPanel>


                        <WrapPanel x:Name="RGBPropertyGrid" Grid.Row="0" Grid.Column="1" ItemHeight="25" VerticalAlignment="Center" HorizontalAlignment="Center">
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" ItemWidth="80" VerticalAlignment="Center">
                            <Button Content="Œˆ’è" Width="70" FontSize="11" Command="{Binding DecideButton, RelativeSource={RelativeSource TemplatedParent}}">

                            </Button>
                            <Button Content="Žæ‚èÁ‚µ" Width="70" FontSize="11" Command="{Binding CancelButton, RelativeSource={RelativeSource TemplatedParent}}">

                            </Button>
                        </WrapPanel>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>










    <Style TargetType="{x:Type custom:EnumCombobox}" BasedOn="{StaticResource {x:Type ComboBox}}">

        <Setter Property="ItemsSource">
            <Setter.Value>
                <Binding Path="Items"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>





    <Style TargetType="{x:Type custom:Parameter_EnumCombo}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type custom:Parameter_EnumCombo}">

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Title.Value, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Center" Margin="0,0,40,0"/>
                        <custom:EnumCombobox x:Name="EnumCombobox" Grid.Column="1"/>
                    </Grid>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>









    <Style TargetType="{x:Type custom:CharaImageCombobox}" BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="Height" Value="120"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="ItemsSource">
            <Setter.Value>
                <Binding Path="Items" Converter="{StaticResource ResourceKey=PathImageConverter}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    

</ResourceDictionary>
